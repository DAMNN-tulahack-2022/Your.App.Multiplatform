<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Your.App.PostDetailPage"
             Title="{Binding Title}">
    <ScrollView BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}">
        <VerticalStackLayout>
            <Label Style="{StaticResource LabelTextAppearance}"
                   Text="{Binding Body}" 
                   Margin="16"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
