<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Your.App.RootPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Your.App">

    <TabBar>
        <Tab Title="{Binding PostsLocalizedTitle}" Icon="home">
            <ShellContent ContentTemplate="{DataTemplate local:PostsPage}" />
        </Tab>
        <Tab Title="{Binding SearchLocalizedTitle}" Icon="search">
            <ShellContent ContentTemplate="{DataTemplate local:SearchPage}" />
        </Tab>
        <Tab Title="{Binding ProjectLocalizedTitle}" Icon="project">
            <ShellContent ContentTemplate="{DataTemplate local:ProjectPage}" />
        </Tab>
        <Tab Title="{Binding ProfileLocalizedTitle}" Icon="profile">
            <ShellContent ContentTemplate="{DataTemplate local:ProfilePage}" />
        </Tab>
    </TabBar>

</Shell>
